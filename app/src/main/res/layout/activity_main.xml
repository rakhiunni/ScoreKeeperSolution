<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:orientation="vertical">

       <TextView
           android:id="@+id/title_textview"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/title_string"
           android:textSize="38sp"
           android:layout_marginBottom="50dp"/>

       <TextView
           android:id="@+id/teamA_textview"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/teamA_title_string"
           android:textSize="28sp"
           tools:layout_editor_absoluteX="32dp"
           tools:layout_editor_absoluteY="112dp" />
       <TextView
           android:id="@+id/teamA_score_textview"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="10"
           android:textSize="28sp"
           tools:layout_editor_absoluteX="63dp"
           tools:layout_editor_absoluteY="186dp" />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:gravity="center"
           android:orientation="horizontal">

           <Button
               android:id="@+id/increase_TeamA_Button3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/increase_string"
               tools:layout_editor_absoluteX="38dp"
               tools:layout_editor_absoluteY="267dp" />

           <Button
               android:id="@+id/decrease_TeamA_Button"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/increase_string"
               tools:layout_editor_absoluteX="271dp"
               tools:layout_editor_absoluteY="267dp" />

       </LinearLayout>
   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/teamB_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/teamB_title_string"
            android:textSize="28sp"
            tools:layout_editor_absoluteX="263dp"
            tools:layout_editor_absoluteY="112dp" />

        <TextView
            android:id="@+id/teamB_score_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="28sp"
            tools:layout_editor_absoluteX="63dp"
            tools:layout_editor_absoluteY="186dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/decrease_TeamB_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/increase_string"
                tools:layout_editor_absoluteX="38dp"
                tools:layout_editor_absoluteY="267dp" />

            <Button
                android:id="@+id/increase_TeamB_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/increase_string"
                tools:layout_editor_absoluteX="271dp"/>

        </LinearLayout>



    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton android:id="@+id/radio_pirates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="increase or decrease by 1"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton android:id="@+id/radio_ninjas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="increase or decrease by 2"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton android:id="@+id/radio_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="increase or decrease by 3"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>

</LinearLayout>
