<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:text="@string/title_string"
            android:textAlignment="textStart"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:textSize="46sp" />

        <TextView
            android:id="@+id/teamA_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/teamA_title_string"
            android:textSize="32sp"
            android:textColor="@color/yellow"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="112dp" />

        <TextView
            android:id="@+id/teamA_score_textview"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="10"

            android:textSize="68sp"
            tools:layout_editor_absoluteX="63dp"
            tools:layout_editor_absoluteY="186dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/increase_TeamA_Button3"
                style="@style/ButtonTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/decrease_string"
                android:layout_marginRight="5dp"
                tools:layout_editor_absoluteX="38dp"
                tools:layout_editor_absoluteY="267dp" />

            <Button
                android:id="@+id/decrease_TeamA_Button"
                style="@style/ButtonTheme"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:text="@string/increase_string"
                tools:layout_editor_absoluteX="271dp"
                tools:layout_editor_absoluteY="267dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/teamB_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/teamB_title_string"
            android:textSize="28sp"
            android:textColor="@color/blue"
            tools:layout_editor_absoluteX="263dp"
            tools:layout_editor_absoluteY="112dp" />

        <TextView
            android:id="@+id/teamB_score_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textStyle="bold"
            android:textSize="28sp"
            tools:layout_editor_absoluteX="63dp"
            tools:layout_editor_absoluteY="186dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/decrease_TeamB_Button"
                style="@style/ButtonTheme"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/decrease_string"
                tools:layout_editor_absoluteX="38dp"
                tools:layout_editor_absoluteY="267dp" />

            <Button
                android:id="@+id/increase_TeamB_Button"
                style="@style/ButtonTheme"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/increase_string"
                tools:layout_editor_absoluteX="271dp" />

        </LinearLayout>


    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        style="@style/radiobuttonTheme"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_pirates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="increase or decrease by 1" />

        <RadioButton
            android:id="@+id/radio_ninjas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="increase or decrease by 2" />

        <RadioButton
            android:id="@+id/radio_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="increase or decrease by 3" />
    </RadioGroup>

</LinearLayout>
